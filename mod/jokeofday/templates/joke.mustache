{{!
    @template mod_jokeofday/joke

    Vista del chiste

    Example context (json):
    {

    }

}}

<div data-region="mod_jokeofday_joke" class="card" >
    <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">{{category}}</h6>
        <div class="d-flex flex-wrap">
            Flags:
            {{#flags}}
                <span class= "badge badge-pill badge-primary m-1"> {{.}}  </span>
            {{/flags}}
        </div>
        <div>
            <p class="card-text">{{text}}</p>
        </div>
    </div>
    <div class="card-footer">
        <span>{{#str}} media, mod_jokeofday {{/str}}: <strong class="data-media">{{media}}</strong></span>
        <select class="form-select" data-action="rating" data-id="{{id}}">
            <option selected>{{#str}} question, mod_jokeofday {{/str}}</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>

    </div>
</div >

<style>
    [data-region="mod_jokeofday_joke"] {
        width: 60rem;
        margin: 10px;
    }
</style>

{{#js}}
    require(['mod_jokeofday/save_rate'], function(obj) {
    obj.init('[data-region="mod_jokeofday_joke"]', {{id}});
    });
{{/js}}